#include <iostream>
#include <string.h>
using namespace std;

int main(){
   string s;
   cin>>s;
   int cnt1=0, cnt2=0;
   
   for(char c:s){
       if(c=='4') cnt1++;
       else if(c=='7') cnt2++;
   }
   
   if((cnt1+cnt2)==4 || (cnt1+cnt2)==7){
       cout<<"YES";
   }else cout<<"NO";
   return 0;
}
