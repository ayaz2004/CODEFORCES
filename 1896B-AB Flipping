#include <iostream>
using namespace std;

int main(){
    int t;
    cin>>t;
    while(t--){
      int n;
      cin>>n;
      string s;
      cin>>s;
      int a = n-1;
      for(int i=0; i<n; i++)  if(s[i]=='B') a--; else break;
      for(int i=n-1; i>=0; i--) if(s[i]=='A') a--; else break;
      if(a >= 0) cout<<a<<endl;
      else cout<<"0"<<endl;
    }
}    
